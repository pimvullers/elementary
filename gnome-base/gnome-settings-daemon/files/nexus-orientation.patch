+static int read_sysfs_attr_as_int(const char *filename) {
+	int i, c;
+	char buf[40];
+	int fd = open(filename, O_RDONLY);
+	if (fd < 0)
+		return 0;
+	c = read(fd, buf, 40);
+	if (c < 0)
+		return 0;
+	close(fd);
+	sscanf(buf, "%d", &i);
+	
+	return i;
+}
