+  {
+    root_action.set_state (action_state_for_root ());
+  }
+
+  protected Variant action_state_for_root ()
+  {
+    string a11y;
+    string icon_name;
+    if (bluetooth.enabled)
+      {
+        a11y = "Bluetooth (on)";
+        icon_name = "bluetooth-active";
+      }
+    else
+      {
+        a11y = "Bluetooth (off)";
+        icon_name = "bluetooth-disabled";
+      }
